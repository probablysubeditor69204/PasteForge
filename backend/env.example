# Server Configuration
PORT=3000
NODE_ENV=production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Frontend URL (for CORS and netcat responses)
# Set this to your server's public IP or domain
# Example: FRONTEND_URL=http://37.114.37.245:8080
# Or use environment variable when running docker-compose:
# FRONTEND_URL=http://your-server-ip:8080 docker-compose up -d
FRONTEND_URL=http://localhost:8080

# Security
JWT_SECRET=your-secret-key-change-this-in-production

# Netcat Server
NETCAT_PORT=99

